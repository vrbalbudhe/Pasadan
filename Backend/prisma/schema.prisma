generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  name        String
  password    String?
  otpVerified Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  otp       Int
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model VisibilityAdvBar {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  isVisible Boolean @default(false)
}

model AdvImage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  filename  String
  filepath  String
  filetype  String
  filesize  Int
  createdAt DateTime @default(now())
}
