generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  name        String
  password    String?
  googleId    String?  @unique
  otpVerified Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  otp       Int
  expiresAt DateTime
  createdAt DateTime @default(now())
}
